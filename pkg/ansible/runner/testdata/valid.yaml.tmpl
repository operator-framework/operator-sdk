---
- version: v1alpha1
  group: app.example.com
  kind: NoFinalizer
  playbook: {{ .ValidPlaybook }}
  reconcilePeriod: 2s
- version: v1alpha1
  group: app.example.com
  kind: Playbook
  playbook: {{ .ValidPlaybook }}
  finalizer:
    name: finalizer.app.example.com
    role: {{ .ValidRole }}
    vars:
      sentinel: finalizer_running
- version: v1alpha1
  group: app.example.com
  kind: Role
  role: {{ .ValidRole }}
  finalizer:
    name: finalizer.app.example.com
    playbook: {{ .ValidPlaybook }}
    vars:
      sentinel: finalizer_running
